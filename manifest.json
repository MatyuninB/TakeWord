{
  "name": "Take Word!",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Take Word!",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "notifications",
    "storage", 
    "activeTab", 
    "scripting", 
    "management",
    "webRequest", 
    "webNavigation"
  ]
}